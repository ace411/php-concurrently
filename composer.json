{
  "name": "chemem/php-concurrently",
  "description": "A PHP version of concurrently built atop ReactPHP and RxPHP.",
  "license": "Apache-2.0",
  "type": "library",
  "keywords": [
    "concurrently",
    "concurrent processes",
    "concurrent execution",
    "single terminal",
    "single console window",
    "js concurrently",
    "asynchronous",
    "reactive programming",
    "rxphp",
    "reactphp",
    "observables",
    "multiple processes",
    "terminal",
    "console"
  ],
  "authors": [
    {
      "name": "Lochemem Bruno Michael",
      "email": "lochbm@live.com",
      "homepage": "https://chemem.site"
    }
  ],
  "require": {
    "alecrabbit/php-cli-snake": "^0",
    "chemem/bingo-functional": "^2",
    "clue/mq-react": "^1",
    "esroyo/backoff-async": "dev-master",
    "pear/console_commandline": "^1",
    "php-parallel-lint/php-console-color": "^1",
    "react/child-process": "^0",
    "reactivex/rxphp": "^2"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2",
    "friendsofphp/php-cs-fixer": "^3",
    "giorgiosironi/eris": "^0",
    "phpunit/phpunit": "^8 || ^9",
    "react/async": "^4"
  },
  "suggest": {
    "ext-ev": "An interface to the libev library",
    "ext-event": "An interface to the libevent library",
    "ext-uv": "An interface to the libuv library"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Chemem\\Concurrently\\": "src/"
    },
    "files": [
      "src/Proc/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Chemem\\Concurrently\\Tests\\": "tests/"
    }
  },
  "bin": [
    "concurrently"
  ],
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true
    }
  },
  "scripts": {
    "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --diff --verbose",
    "test": "phpunit -c phpunit.xml.dist"
  }
}
